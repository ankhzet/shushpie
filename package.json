{
  "name": "@ankhzet/shushpie",
  "version": "0.0.2",
  "description": "Automated provisioning to embedded over ssh",
  "author": "AnkhZet ankhzet@gmail.com",
  "type": "module",
  "private": true,
  "bin": {
    "shuhpie": "dist/index.js",
    "shushploy": "dist/deploy/manager.js"
  },
  "files": [
    "*.md",
    "dist/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "tsc && node dist/index.js",
    "dev": "tsc && node --enable-source-maps --inspect dist/index.js",
    "dev:deploy": "tsc && node --enable-source-maps --inspect dist/deploy/manager.js",
    "watch:deploy": "node --watch --enable-source-maps --inspect dist/deploy/manager.js",
    "bump-version": "pnpm changeset version",
    "release": "pnpm build && pnpm changeset publish"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.6.2",
    "drivelist": "^12.0.2",
    "execa": "^9.6.1",
    "usb": "^2.16.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/blessed": "^0.1.27",
    "@types/node": "^24.1.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">= 24"
  },
  "packageManager": "pnpm@10.19.0"
}
